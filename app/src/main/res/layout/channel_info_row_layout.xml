<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/channelInfoCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground" >

    <RelativeLayout
        android:id="@+id/channelInfoCardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/channelUserNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_info_tv"
            android:layout_marginTop="@dimen/margin_info_tv"
            android:textSize="@dimen/size_info_text" />

    </RelativeLayout>

</FrameLayout>