<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context="com.itugroup15.channelx.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_profile_h2"
            android:layout_weight="0.4"
            android:textColor="@color/secondaryColor"
            android:text="Name: "/>
        <TextView
            android:id="@+id/profileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_profile_h2"
            android:layout_weight="0.6"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_profile_h2"
            android:layout_weight="0.4"
            android:textColor="@color/secondaryColor"
            android:text="Surname: "/>
        <TextView
            android:id="@+id/profileSurname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_profile_h2"
            android:layout_weight="0.6"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_profile_h2"
            android:layout_weight="0.4"
            android:textColor="@color/secondaryColor"
            android:text="Email: "/>
        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_profile_h2"
            android:layout_weight="0.6"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_profile_h2"
            android:layout_weight="0.4"
            android:textColor="@color/secondaryColor"
            android:text="Surname: "/>
        <EditText
            android:id="@+id/profileTel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_profile_h2"
            android:layout_weight="0.6"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_profile_h2"
            android:layout_weight="0.4"
            android:textColor="@color/secondaryColor"
            android:text="Nickname: "/>
        <EditText
            android:id="@+id/profileNickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_profile_h2"
            android:layout_weight="0.6"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="32dp"
            android:layout_weight="0.5"
            android:onClick="onProfileCancel"
            android:text="@string/cancel_button" />

        <Button
            android:id="@+id/loginButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_weight="0.5"
            android:onClick="onProfileSave"
            android:text="@string/save_button" />

    </LinearLayout>


</LinearLayout>
